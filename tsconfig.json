{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "declaration": true,
        "listFiles": false,
        "outDir": "./lib"
    },
    "compilerOptions_disabled": {
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "outFile": "./build/tsc.js",
      "out": "./built/local/tsc.js"
    },
    "files": [
      "node_modules/inversify/type_definitions/inversify/inversify.d.ts",
      "typings/main.d.ts",
      "src/node-red.d.ts",
      "src/interfaces.d.ts",
      "src/test-config.ts",
      "src/index.ts"
    ],
    "excludeXX": [
      "typedoc",
      "old_lib",
      "old_src",
      "old_test",
      "node_modules",
      "wwwroot",
      "build",
      "built",
      "data",
      "docs",
      "logs",
      "nodes",
      "out",
      "plugins",
      "sample",
      "src",
      "tmp"
    ]
}
